<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QAppbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>
    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"/>
    <style name="TitleTextAppearance.PrimarySurface">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="android:textAppearance">@style/TitleTextAppearance.PrimarySurface</item>
        <item name="titleGravity">center</item>
    </style>
</resources>